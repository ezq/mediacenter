# Cloudflare
CF_API_EMAIL=<Cloudflare email>
CF_API_KEY=<Cloudflare API key>
CF_DNS_API_TOKEN=<Cloudflare API Token>

# Let's Encrypt
LE_EMAIL=<Let'sEncrypt email>

# ProtonVPN (usado por Gluetun/Transmission)
OPENVPN_USER=<ProtonVPN OpenVPN user>
OPENVPN_PASSWORD=<ProtonVPN OpenVPN Password>
VPN_COUNTRIES=<ProtonVPN Countries - ej: Spain Netherlands>

# Dominio
DOMAIN=<tu-dominio.com>

# Traefik
TF_BASIC_AUTH=<salida de: htpasswd -nb admin tu_password>
TF_IP=<IP para acceso local al dashboard - ej: 192.168.1.100>

# Sistema
TIMEZONE=<Europe/Madrid>

# Unpackerr (obtener API keys desde Sonarr/Radarr tras primer arranque)
SONARR_APIKEY=<API key de Sonarr>
RADARR_APIKEY=<API key de Radarr>
